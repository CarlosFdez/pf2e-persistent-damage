{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "removeComments": false,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@pf2e/*": ["./types-pf2e/src/*"],
            "@actor": ["types-pf2e/src/module/actor/index"],
            "@actor/*": ["types-pf2e/src/module/actor/*"],
            "@item": ["types-pf2e/src/module/item/index"],
            "@item/*": ["types-pf2e/src/module/item/*"],
            "@system/*": ["types-pf2e/src/module/system/*"],
            "@module/*": ["types-pf2e/src/module/*"],
            "@scripts/*": ["types-pf2e/src/scripts/*"]
        },
        "types": [
            "jquery",
            "tooltipster",
            "node",
            "handlebars",
            "socket.io"
        ],
        "typeRoots": [
            "../node_modules/@types",
            "../node_modules/handlebars",
            "types/foundry"
        ],
    }
}
