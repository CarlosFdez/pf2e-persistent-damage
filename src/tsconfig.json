{
    "compilerOptions": {
        "target": "es2019",
        "module": "es6",
        "moduleResolution": "node",
        "lib": ["DOM", "ES6", "ES2017", "ES2018", "ES2019"],
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "removeComments": false,
        "resolveJsonModule": true,
        "types": ["@league-of-foundry-developers/foundry-vtt-types"],
        "typeRoots": ["node_modules/@types", "node_modules/handlebars"]
    }
}
