{
    "compilerOptions": {
        "target": "es2019",
        "module": "es6",
        "lib": ["esnext", "dom"],
        "noEmit": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "removeComments": false,
        "resolveJsonModule": true,
        "types": [
            "jquery",
            "foundry-pc-types"
        ],
        "typeRoots": ["node_modules/@types", "node_modules/handlebars"]
    }
}
